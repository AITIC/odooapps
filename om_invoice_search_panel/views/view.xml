<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="invoice_kanban_search_panel" model="ir.ui.view">
            <field name="name">account.invoice.kanban.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//templates">
                     <searchpanel>
                         <field name="company_id" groups="base.group_multi_company" icon="fa-building"/>
                         <field name="user_id" select="multi" icon="fa-tags"/>
                         <field name="state"/>
                         <field name="team_id"/>
                         <field name="partner_id"/>
                     </searchpanel>
                </xpath>
            </field>
        </record>

        <record id="mrp_bom_kanban_view_search_panel" model="ir.ui.view">
            <field name="name">mrp.bom.kanban.inherit</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//templates">
                     <searchpanel>
                         <field name="company_id" groups="base.group_multi_company" icon="fa-building"/>
                         <field name="routing_id" groups="mrp.group_mrp_routings"/>
                         <field name="type"/>
                         <field name="ready_to_produce"/>
                     </searchpanel>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
